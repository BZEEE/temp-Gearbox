<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/gear_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/listItemColor"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/list_item_top_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/gearMakerTextView"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/gearPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <TextView
            android:id="@+id/gearDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_top_section"/>
        <TextView
            android:id="@+id/gearDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gearDateTextView"/>



    </RelativeLayout>

</LinearLayout>